doctype html
html(lang="en")
    head
        link(rel="stylesheet", type="text/css", href="https://unpkg.com/mvp.css")
        title #{headTitle} - Video with
    body
        header
            h1 Video with
            nav 
                ul 
                    li 
                        a(href="/") Home
                    li 
                        a(href="/search") Search
                    if signin 
                        li 
                            a(href="/video/upload") Upload Video
                        li 
                            a(href=`/user/${signinUser._id}`) #{signinUser.name}'s Profile
                        li
                            a(href="/user/edit") Edit Profile
                        li 
                            a(href="/user/signout") Sign Out
                    else
                        li 
                            a(href="/signin") Sign In
                        li 
                            a(href="/signup") Sign Up
                    block nav
            h2=bodyTitle
        main
            block body_content
        include partials/footer
        script(src="/static/js/main.js")