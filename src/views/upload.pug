extends base.pug

block body_content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="title", placeholder="Title", required, type="text", maxlength=100)
        input(name="description", placeholder="Description", required, type="text")
        input(name="hashtags", placeholder="Hashtags, seperated by comma.", required, type="text")
        input(type="submit", value="Upload Video")