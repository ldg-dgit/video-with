extends base

block body_content 
    if errorMessage 
       span=errorMessage 
    form(method="POST")
        input(placeholder="Email", name="email", type="email", required)
        input(placeholder="Password", name="password", type="password", required)
        input(type="submit", value="Sign In")
        include partials/social-signin

    div.auth-switch
        span Don't have an account?
        a(href="/signup") Create one now  &rarr;

        br
        a(href="/user/github/sign") Continue with GitHub
        br
        br
        div 