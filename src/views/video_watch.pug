extends base.pug

block body_content 
    div#videocontainer
        video(src="/" + video.videoPath)
        div 
            button#play Play
            button#mute Mute
            input(type="range", step="0.01", value=1, min="0" max="1")#volume
            div 
                span#currentTime 00:00
                span  / 
                span#totalTime 00:00
            div 
                input(type="range", step="0.1", value=0, min="0")#timeline
            div 
                button#fullscreen Enter Full Screen

        //-
            div    
                p=video.description
                small=video.createdAt 
                div
                small Uploaded by 
                    a(href=`/user/${video.owner._id}`)=video.owner.name
            
            if signinUser
                if String(video.owner._id) === String(signinUser._id)
                    br
                    a(href=`${video.id}/edit`) Edit Video &rarr;
                    div
                    a(href=`${video.id}/delete`) Delete Video &rarr;

block scripts
    script(src="/static/js/videoPlayer.js")