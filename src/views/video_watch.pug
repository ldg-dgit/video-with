extends base.pug

block body_content 
    div#videoContainer(data-id=video._id)
        video(src="/" + video.videoPath)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00:00
                    span  / 
                    span#totalTime 00:00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div 
                span#fullScreen
                    i.fas.fa-expand
    div.video__data
        p.video__title=video.title
        p.video__description=video.description
        small.video__owner Uploaded by 
            a(href=`/users/${video.owner._id}`)=video.owner.name
        small.video__createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
        if String(video.owner._id) === String(signin._id)
            a.btn(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a.btn(href=`${video.id}/delete`) Delete Video &rarr;
    if signinUser 
        div.video__comments
            form.video__comment-form#commentForm
                textarea(cols="45", rows="4", placeholder="Write a nice commment...")
                button Add Comment
    div.video__comments
        ul 
            each comment in video.comments.reverse()
                li.video__comment
                    i.fas.fa-comment
                    span  #{comment.text}


block scripts
    script(src="/static/js/videoPlayer.js")
    if signin
        script(src="/static/js/commentSection.js")